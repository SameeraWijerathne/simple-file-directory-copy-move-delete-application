<AnchorPane prefHeight="260.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.wsrp.sameera.controller.MainViewController">
    <children>
        <VBox layoutX="21.0" layoutY="22.0" prefHeight="225.0" prefWidth="446.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Select a File/Folder" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="txtSource" prefHeight="24.0" prefWidth="360.0" />
                        <Button fx:id="btnSourceBrowse" mnemonicParsing="false" onAction="#btnSourceBrowseOnAction" text="BROWSE" />
                    </children>
                </HBox>
                <Label text="Select a Folder" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="txtDestination" prefHeight="24.0" prefWidth="360.0" />
                        <Button fx:id="btnDestinationBrowse" mnemonicParsing="false" onAction="#btnDestinationBrowseOnAction" text="BROWSE" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnCopy" mnemonicParsing="false" onAction="#btnCopyOnAction" prefWidth="68.0" text="COPY" />
                        <Button fx:id="btnMove" mnemonicParsing="false" onAction="#btnMoveOnAction" prefWidth="68.0" text="MOVE" />
                        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="DELETE" />
                    </children>
                </HBox>
                <ProgressBar fx:id="prgBar" maxWidth="1.7976931348623157E308" prefHeight="30.0" prefWidth="200.0" progress="0.0" />
                <Label fx:id="lblPercentage" alignment="CENTER" maxWidth="1.7976931348623157E308" text="0%">
                    <font>
                        <Font size="17.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
